/**
* Unetu predjenu kilometrazu konvertovati pomocu metode konvertuj() sa jednim parametrom brojkm u predjenu duzinu puta u miljama.
* Ispisati zaokruzenu duzinu tog predjenog puta u miljama.
* 1 km=0,621371192 milje
*/

package Paket;

import java.util.Scanner; 
import java.lang.Math; 

public class Main {
	public static void main(String[] args)
	{	
		Scanner sc=new Scanner(System.in);
		
		double km=sc.nextDouble();
		
		konvertuj(km);
		sc.close();
		
	}

	public static void konvertuj(double brojkm)
	{
		if(brojkm<0) System.out.println("-1");
		else 
		{
			double brojmilja= 0.621371192*brojkm;
			System.out.println("Predjeno u miljama: "+ Math.round(brojmilja));
		}
		
	}
}
